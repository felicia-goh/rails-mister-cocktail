<div class="container">
  <h1><%= @cocktail.name %></h1>
  <ul>
    <% @doses.each do |dose| %>
      <li>
        <%= dose.description %>, <%= dose.ingredient.name %>
        (<%= link_to 'Delete', dose_path(dose), method: :delete  %>)
        <i class="far fa-cocktail"></i>
      </li>
    <% end %>
  </ul>
</div>
<br>

<div class="container">
  <h4>Add a new dose</h4>
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description %>
    <%= f.association :ingredient %>
    <%= f.button :submit, class: "btn btn-primary btn-block" %>
  <% end %>

  <i class="far fa-cocktail"></i>
</div>

<hr>
<div class="container">
  <ul>
    <% @reviews.each do |review| %>
      <li>
        <%= review.rating %>/5, <%= review.content %>
        (<%= link_to 'Delete', review_path(review), method: :delete  %>)
        <i class="far fa-cocktail"></i>
      </li>
    <% end %>
  </ul>
</div>
<br>
<div class="container">
  <h4>Add a new review</h4>
  <%= simple_form_for [@cocktail, @review] do |f| %>
    <%= f.input :rating %>
    <%= f.input :content %>
    <%= f.button :submit, class: "btn btn-primary btn-block" %>
  <% end %>
</div>
